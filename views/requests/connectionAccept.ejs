<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/header') %>
    <div class="container page">
      <div class="row">
        <div class="col-12 col-md-8 order-2 order-md-1">
          <div class="card page-card">
            <div class="card-title">
              Add User,
              <h4><%= sender.username %></h4>
              <img
                src="<%= imagePath%>/<%= sender.thumbnail %>"
                alt="<%= sender.username %>"
                class="thumbnail-img-sm"
              />
            </div>
            <div class="card-body">
              <form
                action="/requests/connectionRequests/<%= sender._id %>/accept"
                method="POST"
              >
                <button type="submit" class="form-button">Accept</button>
                <a href="/requests"
                  ><button type="button" class="form-button">Cancel</button></a
                >
              </form>
            </div>
          </div>
        </div>
        <%- include('../partials/sidebar') %>
      </div>
    </div>
  </body>
</html>
